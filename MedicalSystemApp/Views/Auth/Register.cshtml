@model MedicalSystem.Application.ViewModel.User.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom right, #4A90E2, #50E3C2);
            font-family: 'Roboto', sans-serif;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            color: white;
        }

        .logo-container {
            position: absolute;
            left: 100px; /* Ajustar la posición horizontal */
            top: 50%;
            transform: translateY(-50%);
            z-index: 2;
            text-align: left;
        }

        .header-title {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .slogan {
            font-size: 1.5rem;
            font-weight: 400;
            margin-top: 0;
            color: rgba(255, 255, 255, 0.8);
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 800px;
            padding: 20px;
            margin-left: auto;
            background: rgba(255, 255, 255, 0.2);
        }

        .form {
            z-index: 1;
        }

        .form-control {
            border-radius: 5px;
            background: rgba(255, 255, 255, 0.3);
            color: white;
        }

        .form-label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .disabled-select {
            background: rgba(255, 255, 255, 0.2);
            color: #aaa; /* Cambia el color del texto para indicar que está deshabilitado */
            cursor: not-allowed; /* Cambia el cursor al pasar sobre el select */
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="logo-container">
        <h1 class="header-title">MEDICAL SYSTEM</h1>
        <p class="slogan">Atención Médica a Tu Alcance</p> <!-- Eslogan agregado -->
    </div>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-12 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-center">Registrarse</h4>
                        <form asp-action="Register" method="post">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="FirsName" class="form-label">Nombre</label>
                                    <input asp-for="FirsName" class="form-control" />
                                    <span asp-validation-for="FirsName" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label">Apellido</label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label">Correo Electrónico</label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Username" class="form-label">Nombre de Usuario</label>
                                    <input asp-for="Username" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Password" class="form-label">Contraseña</label>
                                    <input asp-for="Password" class="form-control" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                           
                            <input type="hidden" asp-for="ClinicID" />

                            <div class="row mb-3">
                                
                                <div class="col-md-6">
                                    <label asp-for="ClinicName" class="form-label">Nombre de la Nueva Clínica</label>
                                    <input asp-for="ClinicName" class="form-control" placeholder="Ingrese el nombre de la clínica" />
                                    <span class="text-danger" id="clinicError"></span>
                                </div>
                            </div>

                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <button type="submit" class="btn btn-primary w-100">Registrar</button>
                        </form>
                        <div class="text-center mt-3">
                            <a asp-action="Login" class="btn btn-link">¿Ya tienes una cuenta? Inicia sesión</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
