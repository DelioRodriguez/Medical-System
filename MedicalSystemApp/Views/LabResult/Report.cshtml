@model MedicalSystem.Application.ViewModel.Lab.ReportResultViewModel

@{
    ViewData["Title"] = "Reportar Resultado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: #e9ecef; 
            font-family: 'Roboto', sans-serif;
            color: #343a40; 
        }

        .navbar-custom {
            background-color: #007bff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: white !important;
        }

        .nav-link {
            color: white !important;
            font-weight: 500;
        }

        .nav-link:hover {
            color: #d4d4d4 !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Asits/Index">Sistema Médico</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Asits/Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Patient/Index">Pacientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Appointment/Index">Citas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/LabResult/Index">Resultados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="confirmLogout()">Cerrar Sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Report" method="post">
            <input type="hidden" asp-for="ResultLaboratoryId" />

            <div class="form-group mb-3">
                <label for="result">Resultado:</label>
                <textarea class="form-control" id="result" asp-for="Result" required></textarea>
            </div>

            <button type="submit" class="btn btn-success">Enviar Resultado</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmLogout() {
            var confirmation = confirm("¿Estás seguro de que deseas cerrar sesión?");
            if (confirmation) {
                window.location.href = '/Auth/Login'; 
            }
        }
    </script>
</body>
</html>
